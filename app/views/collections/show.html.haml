- @collection.collection_strings.each do |string|
  - if string.language == @user.language
    %h1{id: 'collection-title'}= string.title
    %i{class: "far fa-edit", id: 'collection-edit-button', 'data-toggle' => 'toggle', 'data-placement' => 'right', title: 'Edit'}
    = render 'update_collection_string_title_form', deck: @deck, collection: @collection, collection_string: string
    %p{id: 'collection-description'}= string.description
    %i{class: "far fa-edit", id: 'collection-des-edit-button', 'data-toggle' => 'toggle', 'data-placement' => 'right', title: 'Edit'}
    = render 'update_collection_string_description_form', deck: @deck, collection: @collection, collection_string: string
    - break
  - elsif string.language == @collection.deck.default_language
    %h1{id: 'collection-title'}= string.title
    %i{class: "far fa-edit", id: 'collection-edit-button', 'data-toggle' => 'toggle', 'data-placement' => 'right', title: 'Edit'}
    = render 'update_collection_string_title_form', deck: @deck, collection: @collection, collection_string: string
    %p{id: 'collection-description'}= string.description
    %i{class: "far fa-edit", id: 'collection-des-edit-button', 'data-toggle' => 'toggle', 'data-placement' => 'right', title: 'Edit'}
    = render 'update_collection_string_description_form', deck: @deck, collection: @collection, collection_string: string
    - break
