#deck-index{ 'data-controller'=>'index-scroll deck-tabs', 'data-action'=>'scroll@window->index-scroll#fixNav', 'data-target'=>'deck-tabs.indexDiv' }
  .deck-tabs
    = render 'shared/deck_nav', decks_owned_strings: @decks_owned_strings
    #top-bar{'data-target'=>'deck-create.topbardiv'}
    #search-bar
      = render 'shared/deck_search_form', category: @category, languages: @languages
    - if user_signed_in?
      #deck-create{'data-target'=>'deck-create.deckcreatediv'}
        = render 'create_deck_form', deck: @deck, user: @user
      .my-global-decks{'data-target'=>'deck-tabs.global', style: 'display: none'}

      .my-decks{'data-target'=>'deck-tabs.mydecks'}

      .my-archived{'data-target'=>'deck-tabs.myArchived'}

      .shared-read-decks{'data-target'=>'deck-tabs.sharedRead'}

      .shared-update-decks{'data-target'=>'deck-tabs.sharedUpdate'}
    - else
      .deck-tabs
        .global-decks{'data-target'=>'deck-tabs.global'}

        .my-decks{'data-target'=>'deck-tabs.mydecks'}

        .my-archived{'data-target'=>'deck-tabs.myArchived'}

        .shared-read-decks{'data-target'=>'deck-tabs.sharedRead'}

        .shared-update-decks{'data-target'=>'deck-tabs.sharedUpdate'}

