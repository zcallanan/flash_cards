// rendered by collections/show
%h1{id: 'collection-title'}= collection_string.title
%i{class: "far fa-edit", id: 'collection-edit-button', 'data-toggle' => 'toggle', 'data-placement' => 'right', title: 'Edit'}
= render 'collection_strings/update_collection_string_title_form', deck: deck, collection: collection, collection_string: collection_string
%p{id: 'collection-description'}= collection_string.description
%i{class: "far fa-edit", id: 'collection-des-edit-button', 'data-toggle' => 'toggle', 'data-placement' => 'right', title: 'Edit'}
= render 'collection_strings/update_collection_string_description_form', deck: deck, collection: collection, collection_string: collection_string
